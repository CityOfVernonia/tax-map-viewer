{
  "name": "tax-map-viewer",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "node ./scripts/sass-replace.js",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "serve": "vite preview",
    "test": "npm run prettier && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfVernonia/tax-map-viewer.git"
  },
  "author": "COV-GIS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CityOfVernonia/tax-map-viewer/issues"
  },
  "homepage": "https://github.com/CityOfVernonia/tax-map-viewer#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "ansi-regex": ">=6.0.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.0",
    "prettier": "^2.8.2",
    "replace-in-file": "^6.3.5",
    "sass": "^1.57.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "vite": "3.0.4",
    "vite-plugin-ejs": "^1.6.4"
  },
  "dependencies": {
    "@arcgis/core": "^4.25.5",
    "@esri/calcite-components": "^1.0.0-beta.99",
    "@vernonia/core": "^2.1.12",
    "@vernonia/map-application": "^1.0.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "package.json",
      "vite.config.js",
      "package-lock.json",
      "build/**",
      "node_modules/**",
      "scripts/**",
      "src/public/**"
    ],
    "rules": {
      "no-console": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/ban-ts-comment": 1
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto"
  }
}
